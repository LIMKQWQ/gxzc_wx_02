.flexCenter {
  display: flex;
  justify-content: center;
  align-items: center;
}
.mask {
  display: none;
  height: 100vh;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 99;
  justify-content: center;
  align-items: center;
}
.mask.show {
  display: flex;
}
.clipOneLine {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.container .logo {
  width: 200rpx;
  display: block;
  margin: 0 auto;
  margin-top: 40rpx;
}
.container .text {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-top: 40rpx;
}
.container .formContent {
  width: 600rpx;
  overflow: hidden;
  margin: 0 auto;
  margin-top: 40rpx;
}
.container .formContent .input {
  position: relative;
  height: 70rpx;
  border: 1px solid #D7D7D7;
  border-radius: 7rpx;
  margin-top: 30rpx;
}
.container .formContent .input input {
  box-sizing: border-box;
  border: none;
  height: 65rpx;
  outline: none;
  background-color: transparent;
  padding-left: 73rpx;
}
.container .formContent .input input:-webkit-input-placeholder {
  font-size: 28rpx;
  color: #999999;
}
.container .formContent .input .icon {
  width: 22rpx;
  position: absolute;
  left: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}
.container .formContent .forgotPwd {
  display: flex;
  justify-content: flex-end;
  margin-top: 30rpx;
  color: #21439B;
}
.container .formContent .ronBtn {
  width: 600rpx;
  height: 78rpx;
  background-color: #21439B;
  font-size: 36rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 30rpx;
  border-radius: 39rpx;
}
.container .tip {
  display: flex;
  justify-content: center;
  width: 100%;
  margin-top: 30rpx;
  font-size: 24rpx;
  color: #999999;
}
.container .tip .toRegister {
  color: #21439B;
}
.container .selectUserMask .selectUser {
  width: 620rpx;
  height: 456rpx;
  background-color: #fff;
  padding: 40rpx;
}
.container .selectUserMask .selectUser .top {
  display: flex;
  justify-content: space-between;
}
.container .selectUserMask .selectUser .top .title {
  color: #21439B;
  font-size: 34rpx;
  font-weight: bold;
}
.container .selectUserMask .selectUser .top .closeBtn {
  height: 30rpx;
}
.container .selectUserMask .selectUser .selectMenus {
  display: flex;
  justify-content: center;
  margin-top: 60rpx;
}
.container .selectUserMask .selectUser .selectMenus .menuItem:last-child {
  margin-left: 140rpx;
}
.container .selectUserMask .selectUser .selectMenus .menuItem.selected .btn .selectedIcon {
  display: block;
}
.container .selectUserMask .selectUser .selectMenus .menuItem .btn {
  width: 120rpx;
  height: 120rpx;
  background-color: #fff;
  border-radius: 50%;
  box-shadow: 0px 1px 9px 0px rgba(143, 143, 143, 0.2);
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}
.container .selectUserMask .selectUser .selectMenus .menuItem .btn .icon {
  width: 60rpx;
}
.container .selectUserMask .selectUser .selectMenus .menuItem .btn .selectedIcon {
  width: 23rpx;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translate(-50%, 40%);
  display: none;
}
.container .selectUserMask .selectUser .selectMenus .menuItem .title {
  font-size: 26rpx;
  text-align: center;
  margin-top: 24rpx;
}
.container .selectUserMask .selectUser .nextStepBtn {
  width: 170rpx;
  height: 54rpx;
  background-color: #21439B;
  font-size: 28rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 27rpx;
  margin: 0 auto;
  margin-top: 40rpx;
}
