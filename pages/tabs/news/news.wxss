.flexCenter {
  display: flex;
  justify-content: center;
  align-items: center;
}
.mask {
  display: none;
  height: 100vh;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 99;
  justify-content: center;
  align-items: center;
}
.mask.show {
  display: flex;
}
.clipOneLine {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.lodingMoreIcon {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  height: 100rpx;
}
.container .banner {
  min-height: 280rpx;
}
.container .banner image {
  height: 280rpx;
  width: 100%;
}
.container .tabs {
  display: flex;
  width: 690rpx;
  margin: 0 auto;
  margin-top: 40rpx;
  position: relative;
}
.container .tabs.newsActive .tabItem.news {
  color: #333333;
  font-weight: bold;
}
.container .tabs.newsActive::before {
  transform: translateX(0);
}
.container .tabs.dynamicActive .tabItem.dynamic {
  color: #333333;
  font-weight: bold;
}
.container .tabs.dynamicActive::before {
  transform: translateX(154rpx);
}
.container .tabs .tabItem {
  width: 120rpx;
  color: #666666;
  font-size: 28rpx;
  padding-bottom: 24rpx;
}
.container .tabs .tabItem:last-child {
  margin-left: 34rpx;
}
.container .tabs::before {
  content: "";
  display: block;
  width: 120rpx;
  border-bottom: 4rpx solid #21439B;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 1;
  transition: transform 0.2s;
}
.container .tabs::after {
  content: "";
  display: block;
  width: 690rpx;
  border-bottom: 1px solid #E7E5F2;
  position: absolute;
  bottom: 0;
  left: 0;
  border-radius: 1rpx;
}
.container .newsList {
  width: 692rpx;
  margin: 0 auto;
  flex-grow: 99;
}
.container .newsList .newsItem {
  display: flex;
  height: 145rpx;
  position: relative;
  margin-bottom: 80rpx;
}
.container .newsList .newsItem:first-child {
  padding-top: 40rpx;
}
.container .newsList .newsItem::after {
  content: "";
  display: block;
  position: absolute;
  bottom: -40rpx;
  width: 100%;
  border-bottom: 1rpx solid #E7E5F2;
}
.container .newsList .newsItem .leftInfo {
  width: 433rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.container .newsList .newsItem .leftInfo .title {
  font-size: 30rpx;
  color: #333333;
  line-height: 46rpx;
  height: 95rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.container .newsList .newsItem .leftInfo .info {
  display: flex;
  color: #666666;
}
.container .newsList .newsItem .leftInfo .info .views {
  margin-left: 33rpx;
}
.container .newsList .newsItem .leftInfo .info .views image {
  width: 24rpx;
}
.container .newsList .newsItem .rightInfo {
  margin-left: 32rpx;
}
.container .newsList .newsItem .rightInfo .pic image {
  width: 225rpx;
  height: 145rpx;
}
