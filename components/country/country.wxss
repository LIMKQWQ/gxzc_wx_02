.flexCenter {
  display: flex;
  justify-content: center;
  align-items: center;
}
.mask {
  display: none;
  height: 100vh;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 99;
  display: flex;
  justify-content: center;
  align-items: center;
}
.mask.show {
  display: flex;
}
.clipOneLine {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.country_ {
  width: 100vw;
  height: 100vh;
  background-color: #fff;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9999;
  display: none;
}
.country_.show {
  display: block;
}
.country_ .countryTitle {
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 30rpx;
  font-size: 28rpx;
  font-weight: bold;
  position: relative;
}
.country_ .countryTitle .closeIcon {
  width: 20rpx;
  height: 20rpx;
  padding: 20rpx;
  position: absolute;
  right: 50rpx;
  top: 50%;
  transform: translateY(-50%);
}
.country_ .leftContent {
  width: 700rpx;
}
.country_ .leftContent .item {
  margin-bottom: 30rpx;
}
.country_ .leftContent .item .start {
  height: 50rpx;
  background-color: #f8f8f8;
  line-height: 50rpx;
  font-size: 28rpx;
  padding-left: 30rpx;
}
.country_ .leftContent .item .countryItem {
  height: 80rpx;
  line-height: 80rpx;
  margin-left: 20rpx;
  border-bottom: 1px solid #DCDCDC;
  display: flex;
  font-size: 32rpx;
}
.country_ .leftContent .item .countryItem .num {
  font-size: 24rpx;
  width: 100rpx;
  color: #666666;
}
.country_ .rightContent {
  text-align: center;
  width: 50rpx;
  position: fixed;
  right: 0;
  top: 130rpx;
}
.country_ .rightContent .start {
  margin-bottom: 15rpx;
}
