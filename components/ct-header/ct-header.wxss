.flexCenter {
  display: flex;
  justify-content: center;
  align-items: center;
}

.mask {
  display: none;
  height: 100vh;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 99;
  justify-content: center;
  align-items: center;
}

.mask.show {
  display: flex;
}

.clipOneLine {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.container {
  width: 100%;
  position: fixed;
  font-size: 36rpx;
  font-weight: bold;
  z-index: 99;
  top: 0;
  background-color: #fff;
  border-bottom: 1rpx solid #F1F1F1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.container.isIndex {
  position: fixed;
  width: 100%;
  background-color: transparent;
  border-bottom: none;
}

.container.isIndex .content {
  color: #fff;
}

.container.isIndex .content .toggleLangIcon.isIndex {
  display: block;
}

.container.isBack {
  position: fixed;
  width: 100%;
  background-color: #fff;
}

.container.isBack .content .toggleLangIcon {
  display: none;
}

.container.isBack .content .btns {
  display: flex;
}

.container .content {
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  height: 88rpx;
  bottom: 0;
  width: 100%;
  color: #333;
}

.container .content .toggleLangIcon {
  width: 37rpx;
  position: absolute;
  left: 36rpx;
  top: 50%;
  transform: translateY(-50%);
}

.container .content .toggleLangIcon.isIndex {
  display: none;
}

.container .content .btns {
  width: 168rpx;
  height: 62rpx;
  border-radius: 31rpx;
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  display: none;
}

.container .content .btns::after {
  content: "";
  display: none;
  height: 32rpx;
  border-right: 1rpx solid #E0E0E0;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.container .content .btns .btn {
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.container .content .btns .btn.backBtn {
  width: 79rpx;
}

.container .content .btns .btn.backBtn .backIcon {
  width: 37rpx;
}

.container .content .btns .btn.toggleBtn {
  width: 88rpx;
}

.container .content .btns .btn.toggleBtn .backToggleLangIcon {
  width: 37rpx;
}

.en {
  position: absolute;
  left: 60rpx;
  font-size: 26rpx;
  padding: 2rpx 2rpx;
  border-radius: 8rpx;
  border: 4rpx solid #333;
}

.container.isIndex .content .en {
  color: #fff;
  border: 4rpx solid #fff;
}

.container.isBack .leftBtn {
  position: absolute;
  left: 40rpx;
  border: 1px solid #E0E0E0;
  width: 180rpx;
  border-radius: 33rpx;
  height: 66rpx;
}

.container.isBack .leftBtn text {
  height: 100%;
  width: 1rpx;
  background-color: #E0E0E0;
  display: block;
  margin-left: 80rpx;
}

.container.isBack .content .en {
  left: 145rpx;
}

.container.isBack .content .btns {
  left: 50rpx;
  z-index: 9999;
}