.flexCenter {
  display: flex;
  justify-content: center;
  align-items: center;
}

.mask {
  display: none;
  height: 100vh;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 99;
  justify-content: center;
  align-items: center;
}

.mask.show {
  display: flex;
}

.clipOneLine {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.container .list {
  width: 690rpx;
  margin: 0 auto;
  margin-top: 30rpx;
}

.container .list .row {
  display: flex;
  justify-content: space-between;
}

.container .list .row .listItem {
  width: 335rpx;
  box-shadow: 0rpx 6rpx 17rpx 1rpx rgba(153, 153, 153, 0.2);
  padding-bottom: 84rpx;
  margin-bottom: 30rpx;
  position: relative;
  height: 450rpx;
}

.container .list .row .listItem .thumbnail {
  position: relative;
  width: 100%;
  height: 260rpx;
}

.container .list .row .listItem .thumbnail image {
  width: 100%;
  height: 260rpx;
  object-fit: cover;
}

.container .list .row .listItem .thumbnail .distance {
  height: 44rpx;
  padding: 0 20rpx;
  background-color: #fff;
  position: absolute;
  left: 0;
  bottom: 0;
  z-index: 1;
  padding-left: 10rpx;
  display: flex;
  align-items: center;
  color: #666;
  font-size: 22rpx;
}

.container .list .row .listItem .thumbnail .distance .distanceIcon {
  width: 20rpx;
  height: 20rpx;
  margin-right: 4rpx;
}

.container .list .row .listItem .title {
  padding: 15rpx;
  font-weight: bold;
  font-size: 28rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;

}


.container .list .row .listItem .tags {
  font-size: 22rpx;
  color: #666;
  display: flex;
  height: 30rpx;
  padding: 0 15rpx;
}

.container .list .row .listItem .tags .tagItem {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.container .list .row .listItem .info {
  margin-top: 16rpx;
  display: flex;
  justify-content: space-between;
  padding: 0 15rpx;
  font-size: 22rpx;
  color: #666666;
}

.container .list .row .listItem .info .distance image {
  width: 20rpx;
}

.container .list .row .listItem .toManage {
  margin-top: 15rpx;
  position: absolute;
  bottom: 20rpx;
  left: 50%;
  transform: translateX(-50%);
}

.container .list .row .listItem .toManage .btn {
  display: block;
  width: 144rpx;
  height: 44rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 auto;
  background-color: #019E97;
  border-radius: 22rpx;
  color: #ffffff;
}

.container .list .row .listItem .toManage .btn image {
  width: 18rpx;
  margin-left: 6rpx;
}

.container .list .row .listItem .intr {
  font-size: 22rpx;
  color: #666;
  padding: 0 15rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  /* 指定显示文本的行数 */
  overflow: hidden;
  /* 超出隐藏 */
  height: 30rpx;
}

.container .list .row .listItem .manufacturer {
  font-size: 22rpx;
  margin-top: 15rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 0 15rpx;

}

.container .list .row .listItem .pak_cz {
  color: #21439B;
}

.container .list .row .listItem .pak_cs {
  color: #CF1D1D;
}

.container .list .row .listItem .stock {
  display: flex;
}
.container .list .row .listItem .diameter{
  padding: 0 15rpx;
  font-size: 22rpx;
  margin-top: 15rpx;
  color: #666;
}