.flexCenter {
  display: flex;
  justify-content: center;
  align-items: center;
}
.mask {
  display: none;
  height: 100vh;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 99;
  justify-content: center;
  align-items: center;
}
.mask.show {
  display: flex;
}
.clipOneLine {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.container {
  padding-bottom: 80rpx;
}
.container .formContainer {
  width: 690rpx;
  margin: 0 auto;
  margin-top: 40rpx;
}
.container .formContainer .formItem {
  display: flex;
  height: 70rpx;
  margin-bottom: 30rpx;
}
.container .formContainer .formItem .title {
  width: 148rpx;
  font-size: 30rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
}
.container .formContainer .formItem .input {
  width: 540rpx;
  height: 100%;
  border: 1rpx solid #D7D7D7;
  border-radius: 7rpx;
  display: flex;
  align-items: center;
  position: relative;
}
.container .formContainer .formItem .input.address input,
.container .formContainer .formItem .input.detailAddress input,
.container .formContainer .formItem .input.pipe_level input {
  width: 540rpx;
  padding-right: 50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.container .formContainer .formItem .input input {
  box-sizing: border-box;
  padding-left: 41rpx;
  width: 540rpx;
  height: 100%;
  font-size: 30rpx;
}
.container .formContainer .formItem .input .icon {
  width: 16rpx;
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}
.container .formContainer .illus {
  margin-bottom: 30rpx;
}
.container .formContainer .illus .illusTitle {
  font-size: 30rpx;
  margin-bottom: 20rpx;
}
.container .formContainer .detailTitle {
  font-size: 30rpx;
  margin-bottom: 21rpx;
}
.container .formContainer .detail {
  border: 1px solid #DFDFDF;
}
.container .formContainer .detail .header {
  height: 60rpx;
  background-color: #F9F9F9;
}
.container .formContainer .detail .header .item {
  font-size: 26rpx;
  height: 100%;
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}
.container .formContainer .detail .header .item image {
  width: 31rpx;
  margin-right: 12rpx;
}
.container .formContainer .detail .editor {
  padding: 20rpx;
}
.container .formContainer .submitBtn {
  margin-top: 80rpx;
  height: 78rpx;
  border-radius: 39rpx;
  background-color: #21439B;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  color: #fff;
}
.container .mapContainer map {
  width: 100vw;
  height: 100vh;
}
.container .checkboxes {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.container .checkboxes .checkboxItem {
  width: 80%;
  margin-bottom: 30rpx;
  border-bottom: 1rpx solid #D7D7D7;
  padding-bottom: 30rpx;
  padding-left: 30rpx;
}
