.flexCenter {
  display: flex;
  justify-content: center;
  align-items: center;
}
.mask {
  display: none;
  height: 100vh;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 99;
  justify-content: center;
  align-items: center;
}
.mask.show {
  display: flex;
}
.clipOneLine {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.container .banner {
  min-height: 280rpx;
}
.container .banner image {
  height: 280rpx;
  width: 100%;
}
.container .content .title {
  font-size: 35rpx;
  font-weight: bold;
  text-align: center;
  margin-top: 40rpx;
}
.container .content .info {
  display: flex;
  justify-content: center;
  margin-top: 32rpx;
  margin-bottom: 32rpx;
}
.container .content .info .item {
  font-size: 22rpx;
  color: #999999;
  display: flex;
  align-items: center;
}
.container .content .info .item .icon {
  width: 24rpx;
  margin-right: 8rpx;
}
.container .content .info .item.views {
  margin-left: 49rpx;
}
.container .content .text {
  margin-top: 40rpx;
  width: 690rpx;
}
