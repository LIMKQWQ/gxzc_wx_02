.flexCenter {
  display: flex;
  justify-content: center;
  align-items: center;
}

.mask {
  display: none;
  height: 100vh;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 99;
  display: flex;
  justify-content: center;
  align-items: center;
}

.mask.show {
  display: flex;
}

.clipOneLine {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.lodingMoreIcon {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  height: 100rpx;
}

.container .banner {
  min-height: 280rpx;
}

.container .banner image {
  height: 280rpx;
  width: 100%;
}

.container .list {
  width: 690rpx;
  margin: 0 auto;
  margin-top: 39rpx;
}

.container .list .listItem {
  margin-bottom: 40rpx;
  height: 130rpx;
  box-shadow: 0px 6rpx 17rpx 1rpx rgba(153, 153, 153, 0.2);
  border-radius: 10rpx;
  padding: 0 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
}

.container .list .listItem:last-child {
  margin-bottom: 0;
}

.container .list .listItem .title {
  font-size: 28rpx;
  font-weight: bold;
  width: 480rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.container .list .listItem .time {
  margin-top: 22rpx;
  color: #666666;
}

.container .list .listItem .toInfo {
  position: absolute;
  right: 30rpx;
  top: 50%;
  width: 144rpx;
  height: 44rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid #21439B;
  transform: translateY(-50%);
  font-size: 22rpx;
  color: #21439B;
}

.tabsCont {
  padding: 0 30rpx;
}

.tabs {
  margin-top: 40rpx;
  overflow: scroll;
  white-space: nowrap;
  -webkit-overflow-scrolling: touch;
  overflow-x: auto;
}

.tabs view {
  display: inline-block;
  background-color: #F8F8F8;
  color: #333;
  /* border: 1px solid #000; */
  height: 56rpx;
  text-align: center;
  line-height: 56rpx;
  padding: 0 10rpx;
  font-size: 28rpx;
}

.tabs view:not(:last-child) {
  border-right: 1px solid #EEEEEE;
}

.tabs .active {
  color: #fff;
  background-color: #21439B;
}
.tabs::-webkit-scrollbar{
  display:none
}