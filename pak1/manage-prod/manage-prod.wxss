.flexCenter {
  display: flex;
  justify-content: center;
  align-items: center;
}
.mask {
  display: none;
  height: 100vh;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 99;
  justify-content: center;
  align-items: center;
}
.mask.show {
  display: flex;
}
.clipOneLine {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.container .list {
  width: 690rpx;
  margin: 0 auto;
  margin-top: 30rpx;
}
.container .list .row {
  display: flex;
  justify-content: space-between;
}
.container .list .row:last-child {
  margin-top: 30rpx;
}
.container .list .row .listItem {
  min-width: 335rpx;
  box-shadow: 0rpx 6rpx 17rpx 1rpx rgba(153, 153, 153, 0.2);
  padding-bottom: 84rpx;
  position: relative;
}
.container .list .row .listItem .thumbnail image {
  width: 100%;
  height: 260rpx;
  object-fit: cover;
}
.container .list .row .listItem .title {
  padding: 15rpx;
  font-weight: bold;
  font-size: 28rpx;
}
.container .list .row .listItem .tags {
  font-size: 22rpx;
  color: #666666;
  padding-left: 15rpx;
}
.container .list .row .listItem .info {
  margin-top: 16rpx;
  display: flex;
  justify-content: space-between;
  padding: 0 15rpx;
  font-size: 22rpx;
  color: #666666;
}
.container .list .row .listItem .info .distance image {
  width: 20rpx;
}
.container .list .row .listItem .toManage {
  margin-top: 15rpx;
  position: absolute;
  bottom: 20rpx;
  left: 50%;
  transform: translateX(-50%);
}
.container .list .row .listItem .toManage .btn {
  display: block;
  width: 144rpx;
  height: 44rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 auto;
  background-color: #019E97;
  border-radius: 22rpx;
  color: #ffffff;
}
.container .list .row .listItem .toManage .btn image {
  width: 18rpx;
  margin-left: 6rpx;
}
